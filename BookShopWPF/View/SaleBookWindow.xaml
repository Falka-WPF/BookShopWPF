<Window x:Class="BookShopWPF.View.SaleBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShopWPF.View"
        mc:Ignorable="d"
        Title="SalesControl" Height="160" Width="250"
        MinHeight="160" MinWidth="200"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Label Content="SaleDate:"/>
        <DatePicker x:Name="sale_datepicker"/>
        <Button Content="Sale" Click="Sale_Button_Click"/>
        <Button Content="Close" Click="Close_Button_Click"/>
    </StackPanel>
</Window>
